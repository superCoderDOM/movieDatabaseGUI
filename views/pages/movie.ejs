<html>
    <head>
        <title>movieDB | <%= currentMovie.title %></title>
        <link rel="icon" href="../favicon.ico" type="image/x-icon">
        <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="../myStyles.css">        
    </head>

    <body>

        <div class="top-bar">
            <img src="../movieCam.png" class="top-bar-logo">
            <h1 class="top-bar-title">Movie Database</h1>
            <span class="top-bar-nav">
                <a class="nav-item active" href="<%= '../' %>">Home</a>
            </span>
            <span class="top-bar-nav">
                <a class="nav-item active" href="#" onClick="history.go(-1);return true;">Back</a>
            </span>
            <!-- search bar to look for movie titles by keywords -->
            <div class="search-bar row">
                <form action="../search" method="get">
                    <input type="text" class="search-bar__box form-control" name="keywords" placeholder="Search for movies by title...">
                </form>
            </div>
        </div>

        <div class="container">

            <div id="movie-details">
                <h1 class="text-center"><%= currentMovie.title %></h1>
                <div class="row">
                    <div class="col-xs-5">
                        <a href="<%= currentMovie.poster %>" target="_blank"><img class="movie-poster" src="<%= currentMovie.poster %>" /></a>
                    </div>
                    <div class="col-xs-7">
                        <table class="table">
                            <% for (let key in currentMovie) {
                                if (key === 'poster'){ %>
                                   <tr>
                                        <td><%= key %></td>
                                        <td><a href="<%= currentMovie[key] %>" target="_blank"><%= currentMovie[key] %></a></td>
                                    </tr> 
                                <% }else{ %>
                                    <tr>
                                        <td><%= key %></td>
                                        <td><%= currentMovie[key] %></td>
                                    </tr>
                                <% }
                            } %>
                        </table>
                    </div>    
                </div>
            </div>
        </div>
    </body>
</html>

