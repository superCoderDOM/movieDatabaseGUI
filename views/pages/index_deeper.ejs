<html>
    <head>
        <% if (searchResults) { %>
            <title>movieDB | Search Results</title>
        <% }else{ %>
            <title>movieDB | Home</title>
        <% } %>
        <link rel="icon" href="./favicon.ico" type="image/x-icon">
        <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="./myStyles.css">        
    </head>

    <body>

        <div class="top-bar">
            <img src="./movieCam.png" class="top-bar-logo">
            <h1 class="top-bar-title">Movie Database</h1>
            <span class="top-bar-nav">
                <a class="nav-item active" href="<%= './' %>">Home</a>
            </span>
            <!-- search bar to look for movie titles by keywords -->
            <div class="search-bar row">
                <form action="./search" method="get">
                    <input type="text" class="search-bar__box form-control" name="keywords" placeholder="Search for movies by title...">
                </form>
            </div>
        </div>

        <div class="container">

            <!-- if page displaying search results, show keywords used -->
            <% if (searchResults) { %>
                <div class="row">
                    <div class="col-sm-9 col-md-6">
                        <% if (movieDB.length === 0) {%>
                            <h4>Sorry we could not find any results for: '<%= searchString %>'</h4>
                        <% }else{ %>
                            <h4>Search results for: '<%= searchString %>'</h4>
                        <% } %>
                    </div>
                </div>
            <% }else{ %>
                <h2>Popular Movies</h2>
            <% } %>

            <!-- for all movie entries in database, display summary info -->
            <% for (let i = 0; i < movieDB.length; i++){ %>
                <a class="movie-link" href="<%= './movie/' + movieDB[i].id %>" >
                <div class="media movie-list-item">
                    <div class="media-left">
                        <div class="poster-container">
                            <img class="media-object movie-poster" src="<%= imagePath + movieDB[i].poster_path %>" />
                        </div>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">
                            <%= movieDB[i].title %>
                            <span class="badge"><%= movieDB[i].vote_average %></span>
                        </h4>
                        <div>
                            <%= movieDB[i].overview %>
                        </div>
                        <div class="released-date">
                            Released: <%= movieDB[i].release_date %>
                        </div>
                    </div>
                </div>
                </a>
            <% } %>

        </div>
    </body>
</html>

